<style>
/* Block */
.tabs {
  border-radius: 8px;
  padding: 1rem;
}

/* Elements */
.tabs__list {
  display: flex;
  gap: 2rem;
  margin-bottom: 1rem;
}

.tabs__button {
  cursor: pointer;
  background-color: transparent;
  border: none;
  padding: 0;
  color: var(--color-foreground);
  font-size: 1.7rem;
  font-family: var(--font-body-family);
}

.tabs__content {
  display: none;
  animation: var(--animation-fade-in);
}

/* Modifier */
.tabs__button--active {
  font-weight: bold;
}

.tabs__content--active {
  display: block;
}
</style>

<div class="tabs">
  <div class="tabs__list">
    <button class="tabs__button tabs__button--active" data-tab="details">Details</button>
    <button class="tabs__button" data-tab="shipping">Shipping & Returns</button>
  </div>

  <div class="tabs__content tabs__content--active" data-tab-content="details">
    {{ product.description }}
  </div>

  <div class="tabs__content" data-tab-content="shipping">
     {{ shop.shipping_policy.body }}
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const buttons = document.querySelectorAll(".tab__button");
    const contents = document.querySelectorAll(".tab__content");

    buttons.forEach(btn => {
      btn.addEventListener("click", () => {
        buttons.forEach(b => b.classList.remove("tabs__button--active"));
        contents.forEach(c => c.classList.remove("tabs__content--active"));

        btn.classList.add("tabs__button--active");
        document.getElementById("tab-" + btn.dataset.tab).classList.add("tabs__content--active");
      });
    });
  });
</script>
